<%= render "draft_box", :players => @remaining_platinum_players, :idstring => "platinum_box" %>
<%= render "draft_box", :players => @remaining_gold_players, :idstring => "gold_box" %>
<%= render "draft_box", :players => @remaining_silver_players, :idstring => "silver_box" %>


<div class="draft_pick" id="platinum">
  <%= form_tag select_player_path, :method => :put do %>
    <h4>Platinum Players:</h4>
      <select name="selected_player">
        <% @remaining_platinum_players.each do |player| %>
          <option value="<%= player.id %>">
            <%= "#{player.first_name} #{player.last_name}" %>
          </option>
        <% end %>
      </select>
    <%= submit_tag "Select Player" %>
  <% end %>
</div>

