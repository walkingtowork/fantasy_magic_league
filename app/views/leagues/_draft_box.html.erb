<div class="draft_box" id="<%="#{idstring}"%>">
  <div class="box_close">&times;</div>
  <div class="draft_pick">
    <%= form_tag select_player_path, :method => :put do %>
      <h4><%= idstring.upcase %> Players</h4>
        <select name="selected_player">
          <% players.each do |player| %>
            <option value="<%= player.id %>">
              <%= "#{player.first_name} #{player.last_name}" %>
            </option>
          <% end %>
        </select>
      <%= submit_tag "Select Player" %>
    <% end %>
  </div>
</div>