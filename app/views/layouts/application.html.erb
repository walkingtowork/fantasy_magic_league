<!DOCTYPE html>
<html>
  <head>
    <title>FantasyMTG</title>
      <%= stylesheet_link_tag    "application" %>
      <%= javascript_include_tag "application" %>
      <%= csrf_meta_tags %>
  </head>
  <body>

  <nav id="nav">
    <div id="site_name">
      <%= link_to "FantasyMTG", root_path %>
    </div>

    <div id="color_pie">
      <div id="white"></div>
      <div id="blue"></div>
      <div id="black"></div>
      <div id="red"></div>
      <div id="green"></div>
    </div>

    <div id="user_controls">
      <% if current_user %>
        <% if current_user.id == 1 %>
          <%= link_to "Add Tournament", new_tournament_path %>
        <% end %>
        <%= link_to "Edit Profile", edit_user_path(current_user.id) %>
        <%= link_to "Logout", :logout %>
        <br>
        Logged in as <%= current_user.username %>
      <% else %>
        <%= link_to "Register", new_user_path %> |
        <%= link_to "Login", :login %>
      <% end %>
    </div>
  </nav>
  <div>
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>
  </div>
  <%= yield %>

  </body>
</html>
